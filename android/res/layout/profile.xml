<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true" android:layout_margin="4sp"
		android:id="@+id/avatar" />
	<TextView android:layout_toRightOf="@+id/avatar"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:id="@+id/nickname" />
	<TextView android:layout_below="@+id/nickname"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/avatar" android:id="@+id/fullname" />
	<Button android:id="@+id/follow" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_toRightOf="@+id/nickname" />
	<TextView android:layout_below="@+id/avatar"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/description" />
	<TextView android:layout_below="@+id/description"
		android:text="@string/following_label" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/following_label"
		android:layout_marginRight="4px" />
	<TextView android:layout_below="@+id/description"
		android:layout_toRightOf="@+id/following_label" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/following_number"
		android:layout_marginRight="10px" />
	<TextView android:layout_below="@+id/description"
		android:layout_toRightOf="@+id/following_number" android:text="@string/follower_label"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/follower_label" android:layout_marginRight="4px" />
	<TextView android:layout_below="@+id/description"
		android:layout_toRightOf="@+id/follower_label" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/follower_number"
		android:layout_marginRight="10px" />
</RelativeLayout>