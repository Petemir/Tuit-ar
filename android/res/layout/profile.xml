<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true" android:layout_margin="4sp"
		android:id="@+id/avatar" />
	<TextView android:layout_toRightOf="@+id/avatar"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:id="@+id/nickname"
		android:maxLines="1" />
	<TextView android:layout_below="@+id/nickname"
		android:maxLines="1" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_toRightOf="@+id/avatar"
		android:id="@+id/fullname" />
	<Button android:id="@+id/follow" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentRight="true"
		android:layout_marginBottom="4sp" />
	<TextView android:layout_below="@+id/follow"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:id="@+id/description" />
	<Button android:layout_below="@+id/description" android:id="@+id/url"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
	<TextView android:layout_below="@+id/url" android:text="@string/following_label"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/following_label" android:layout_marginRight="4px" />
	<TextView android:layout_below="@+id/url"
		android:layout_toRightOf="@+id/following_label" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/following_number"
		android:layout_marginRight="10px" />
	<TextView android:layout_below="@+id/following_label"
		android:text="@string/follower_label" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/follower_label"
		android:layout_marginTop="4px" android:layout_marginRight="10px" />
	<TextView android:layout_below="@+id/following_number"
		android:layout_toRightOf="@+id/follower_label" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/follower_number"
		android:layout_marginTop="4px" />
	<TextView android:layout_below="@+id/follower_label"
		android:text="@string/tweets_label" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/tweets_label"
		android:layout_marginTop="4px" android:layout_marginRight="10px" />
	<TextView android:layout_below="@+id/follower_number"
		android:layout_toRightOf="@+id/tweets_label" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/tweets_number"
		android:layout_marginTop="4px" />
	<TextView android:layout_below="@+id/tweets_label"
		android:text="@string/location_label" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/location_label"
		android:layout_marginTop="4px" android:layout_marginRight="10px" />
	<TextView android:layout_below="@+id/tweets_number"
		android:layout_toRightOf="@+id/location_label" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/location"
		android:layout_marginTop="4px" />
	<Button android:id="@+id/see_in_map" android:layout_width="wrap_content"
		android:text="@+string/see_in_map" android:layout_height="wrap_content"
		android:layout_below="@+id/location_label" />
</RelativeLayout>